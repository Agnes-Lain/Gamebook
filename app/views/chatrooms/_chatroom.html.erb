<div class="chat-container">
  <div class="chat-header d-flex justify-content-between">
    <span><h6>#<%= chatroom.name %></h6></span>
    <span class="sms-btn" data-action="click->chatroom#closeBox"><i class="fas fa-times"></i></span>
  </div>
  <hr>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% if chatroom.messages %>
      <% chatroom.messages.each do |message| %>
        <div class="message-container" id="message-<%= message.id %>">
          <i class="author">
            <span><%= message.user.user_name %></span>
            <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
          </i>
          <p><%= message.content %></p>
        </div>
      <% end %>
    <% end %>
  </div>
  <hr>
  <%= simple_form_for [ chatroom, Message.new ], remote: true do |f| %>
    <%= f.input :content, label: false, input_html: { class: "form-control message-box" }, placeholder: "Message ##{chatroom.name}", autofocus: true %>
  <% end %>
</div>
