
<div class="message-container" id="message-<%= message.id %>">
  <i class="author">
    <% if message.user.photo.attached? %>
      <span><%= cl_image_tag message.user.photo.key, alt: "#{message.user.user_name}", class: "avatar" %></span>
    <% else %>
      <span><%= image_tag "avatar_pink.png", alt: "#{message.user.user_name}", class: "avatar" %></span>
    <% end %>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
