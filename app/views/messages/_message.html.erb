
<div class="message-container <%= message.user == current_user ? 'text-end' : 'text-start' %>" id="message-<%= message.id %>">
  <i class="author">
    <span><%= cl_image_tag message.user.photo.key, alt: "#{message.user.user_name}", class: "avatar" %></span>
    <small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
  </i>
  <p><%= message.content %></p>
</div>
