<div class="container-user">
  <% if user.photo.attached? %>
    <%= cl_image_tag user.photo.key, alt: "#{user.user_name}", class: "avatar-large"%>
  <% else %>
    <%=  image_tag "avatar_pink.png", class: "avatar-large" %>
  <% end %>
  <h6 class=user_name><%= user.user_name %></h6>
  <hr>
  <ul>
    <li class="d-flex justify-content-between">
      <span class="d-flex justify-content-begin">
        <a class="btn btn-square" href="">G</a>
        <p>&nbsp my games</p>
      </span>
      <span><h6><%= user_games.count %></h6></span>
    </li>
    <li class="d-flex justify-content-between mt-2">
      <span class="d-flex justify-content-begin">
        <a class="btn btn-square" href="">P</a>
        <p>&nbsp my platforms</p>
      </span>
      <span><h6> <%= platforms.count %> </h6></span>
    </li>
  </ul>
    <% platforms.each do |platform| %>
      <input type="checkbox" class="checkbox-platform" id=<%= platform.id %>>
      <label for=<%= platform.id %>><%=platform.platform_name%> <%=platform.user_games.count%></label>
    <% end %>
</div>
